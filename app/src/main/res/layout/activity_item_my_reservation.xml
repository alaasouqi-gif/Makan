<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".activity.item.item_my_reservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:showDividers="end"
        android:divider="?android:dividerHorizontal"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedTitleGravity="bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@android:color/white"
            app:scrimAnimationDuration="300">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sport"
                android:scaleType="centerCrop" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:showDividers="end"
                android:divider="?android:dividerHorizontal"

                >

            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="end"
        android:divider="?android:dividerVertical"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:text="@string/jordan_digital_motorsport_cup"
            android:textStyle="bold"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginBottom="16dp" />


        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            android:text="@string/start"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_today_black_24dp" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            android:text="@string/end"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_today_black_24dp" />


        <TextView
            android:id="@+id/sub_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            tools:text="Payment Time"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/payment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            tools:text="Payment Time"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            tools:text="Amount : "
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/num_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            tools:text="Number Of Tickets : "
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/id_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Details"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp" />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>