<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="@android:color/white"
    app:behavior_hideable="true"
    android:id="@+id/linear"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="10dp"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_bottom"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/restaurant" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="restaurant pizza hut"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2B3D4D"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"

                    />

                <TextView
                    android:id="@+id/details_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descrbtion"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:ellipsize="end"

                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3C4242"
            android:text="@string/sunday_13_apr_at_10_30_pm"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp"
            android:layout_margin="8dp"
            app:drawableStartCompat="@drawable/ic_today_black_24dp" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3C4242"
            android:text="@string/sunday_13_apr_at_10_30_pm"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp"
            android:layout_margin="8dp"
            app:drawableStartCompat="@drawable/ic_today_black_24dp" />

        <TextView
            android:id="@+id/rate"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3C4242"
            tools:text="21 00 jd"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_baseline_star_border_16" />

        <TextView
            android:id="@+id/price"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3C4242"
            tools:text="21 00 jd"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_attach_money_black_24dp" />


    </LinearLayout>


</LinearLayout>