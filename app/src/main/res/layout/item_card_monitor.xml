<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/payment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@string/restaurant_pizza_hut"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:textColor="#2B3D4D" />

                <TextView
                    android:id="@+id/payment_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    tools:text="28 Aug 2020 - 00:10"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/Tickets_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    tools:text="Id : -MFbbKybW7qmhGZAfcxI"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4dp"

                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Id : -MFbbKybW7qmhGZAfcxI"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4dp"

                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Id : -MFbbKybW7qmhGZAfcxI"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4dp"

                    />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Id : -MFbbKybW7qmhGZAfcxI"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4dp"


                    />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Id : -MFbbKybW7qmhGZAfcxI"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="4dp"

                    />

                <!--<TextView
                    android:id="@+id/time_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/sunday_13_apr_at_10_30_pm"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:textColor="#B4BAC0"
                    android:fontFamily="sans-serif-light"
                    />
                    -->

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>